  height: 100vh;
}

.image {
  width: 60rpx;
  height: 60rpx;
}

.f5 {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 9999;

}

.scale {
  position: absolute;
  bottom: 100rpx;
  right: 30rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.info {
  bottom: 40rpx;
  left: 30rpx;
  width: 350rpx;
  height: 240rpx;
  position: absolute;
  display: flex;
  /* position:absolute;  *//* align-items: center; */
  justify-content: center;
  z-index: 9999;
  font-size: 22rpx;
  flex-direction: column;
